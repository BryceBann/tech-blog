<h3 class="cardHeader">Sign up</h3>
<form id="appForm" class="card-body">
    <div class="form-row">
        <label for="userNameSignup" class="form-label">Username</label>
        <input id="userNameSignup" type="text" class="form-input form-control"/>
    </div>
    <div class="form-row">
        <label for="eamilSignup" class="form-label">Email</label>
        <input id="eamilSignup" type="email" class="form-input form-control"/>
    </div>
    <div class="form-row">
        <label for="passwordSignup" class="form-label">Password</label>
        <input id="passwordSignup" type="password" class="form-input form-control"/>
    </div>
    <button type="submit" class="btn">Sign up</button>
    <a class="btn login-link" href="./login.handlebars">Log In</a>
</form>

<script src="/public/js/signup.js"></script>