<div class="signup">
<h3 class="cardHeader">Sign up</h3>
<form class="card-body signup-form">
    <div class="username">
        <label for="username-signup" class="form-label">Username</label>
        <input id="username-signup" type="text" class="form-input form-control"/>
    </div>
    <div class="email">
        <label for="email-signup" class="form-label">Email</label>
        <input id="email-signup" type="email" class="form-input form-control"/>
    </div>
    <div class="password">
        <label for="password-signup" class="form-label">Password</label>
        <input id="password-signup" type="password" class="form-input form-control"/>
    </div>
    
    <div class="loginAction">
    <button type="submit" class="btn signup-btn">Sign up</button>
    </div>
</form>
</div>

<script src="/javascript/signup.js"></script>