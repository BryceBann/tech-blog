<div class="card">
    <div class="card-header dashboard-post">
       <h4 class="card-title post-title"><a class="link" href="/post/{{id}}">{{title}}</a></h4>
    </div>
        <div class="card-body post-body">
        <p class="card-body post-content">{{content}}</p>
        <p class="card-text post-author">Posted by <span class="post-username">{{user.name}}</span> on {{format_date created_at}}</p>
    </div>
</div>