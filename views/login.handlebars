<h3 class="title pb-3">Log In</h3>
<form id="loginForm" class="card-body">
   <div class="form-row">
        <label for="usernameLogin" class="form-label">Username</label>
        <input id="usernameLogin" type="text" autofocus="true" class="form-input form-control"/>
    </div>

    <div class="form-row mb-2">
        <label for="passwordLogin" class="form-label">Password</label>
        <input id="passwordLogin" type="password" autofocus="true" class="form-input form-control"/>
    </div>
    <button type="submit" class="btn">Login</button>
    <a class="btn login-link" href="/signup">Sign up</a>

</form>

<script src="../public/js/login.js"></script>